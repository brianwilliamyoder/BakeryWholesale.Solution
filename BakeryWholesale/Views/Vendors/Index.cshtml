@{
  Layout = "_Layout";
}

    @using BakeryWholesale.Models;

    <h1>Categories</h1>

    @if (@Model.Count == 0)
    {
      <h3>There are no vendors in the system. Navigate back to "home" to add new vendors.</h3>
    } 

    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }
    <p><a href='/vendors/new'>Add a new vendor</a></p>
    <p><a href='/'>Back home</a></p>